{% extends 'partials/base.html.twig' %}

{% block content %}
	<!-- facebook code -->
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = 'https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.10&appId=195932157209239';
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

	<div class="allies">
		<h3>{{header.allies_title}}</h3>
		{{header.allies_content}}
		<div class="allied-item">

			<!-- get collection from path /aliados  -->
			{% set options = { items: {'@page.children': '/aliados'}, 'limit': 0, 'order': {'by': 'title', 'dir': 'asc'}, 'pagination': false } %}
			{% set allied_logos = page.collection(options) %}

			{% for p in allied_logos %}

				<h2>{{ p.title }}</h2>
				{{ page.media[header.header_image_file].cache.url }}
				[imagen]

			{% endfor %}
		</div>
	</div>

{% endblock %}
